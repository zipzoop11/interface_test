#:import Factory kivy.factory.Factory
<MainInterface>:
    orientation: 'vertical'
    id: main_app
    StatusBar:
        id: status_bar
    MiddleBit:
        id: middle_window
    GridLayout:
        id: bottom_row
        cols: 3
        rows: 1
        size_hint: 1, None
        height: "80dp"
        Button:
            text: 'BT DEVICES'
            id: CONNECT
            on_release: Factory.BTPickerPopup().open()
        Button:
            text: 'ADD TARGET'
            id: ADD_TARGET
            disabled: not app.connected
            on_release: Factory.AddTarget().open()
        Button:
            text: 'INTERFACES'
            id: INTERFACES
            disabled: not app.connected
            on_release: Factory.StartInterface().open()


<MiddleBit@PageLayout>
    border: "25dp"
    TargetList:
        id: TARGET_LIST
    OpaqueBoxLayout:
        FocusTarget:
            id: FOCUS_TARGET
    OpaqueBoxLayout:
        orientation: 'vertical'
        Button:
            text: '33333'
        Button:
            text: '33333'
        Button:
            text: '33333'


<OpaqueBoxLayout@BoxLayout+BackgroundColor>
    background_color: 0, 0, 0, 0




<target@Target>:
    size_hint: 1, None
    height: '120dp'
    canvas:
        Color:
            rgba: 0,0,0,1
        Rectangle:
            size: self.width+15, self.height+15
            pos: self.pos
    Separator:
        index: len(root.children)



<BackgroundColor@Widget>
    background_color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 1
    # Default the background color for this label
    # to r 0, g 0, b 0, a 0


#I fucking hate this
<Separator@Widget>
    size_hint_y: None
    thickness: 15
    margin: 15
    height: self.thickness + 2 * self.margin
    color: 0.486, 0.635, 0.635, 1
    canvas:
        Color:
            rgba: self.color
        Rectangle:
            pos: self.x + self.margin, self.y + self.margin + 1
            size: self.width - 2 * self.margin , self.thickness



